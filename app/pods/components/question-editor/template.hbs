<div class="container pt-5">
  <div class="row justify-content-center red">
    <h2>Add a new Questions</h2>
  </div>
  <div class="row justify-content-center align-items-center">
    <div class="col-2">Title:
    </div>
    <div class="col-10 input-group">
      {{input type="text" class="input-text" value=question.title}}
    </div>
  </div>

  <div class="row justify-content-center align-items-center">
    <div class="col-2">Description:
    </div>
    <div class="col-10">
      {{textarea type="text" class="input-text py-4" value=question.description}}
    </div>
  </div>
  {{#unless question.isNew}}
  <div class="row flex-column justify-content-center">
  <div class="button-dashed add-choice">
    <a>
      <button {{action 'addChoice'}}>Add Choice</button>
    </a>
  </div>
  <ul>
    {{#each question.choices as |choice|}}
    <li class="justify-content-center">
      {{choice-editor choice=choice isCorrect=(includes correctChoices choice.id) onFlagChange=(action 'markChoice') }}
    </li>
    {{/each}}
  </ul>
  Created By: {{question.user.firstname}}
</div>
  {{/unless}}


  <div class="row justify-content-center">
      <div class="button-solid">
        <a class="white">
          <button {{action 'saveQuestion'}}>
            Save Question
          </button>
        </a>
    </div>
  </div>
</div>
