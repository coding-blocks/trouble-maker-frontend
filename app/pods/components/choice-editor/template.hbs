<div class="row justify-content-center align-items-center {{if isCorrect 'correct'}}">
  <div class="col-8">
    {{#if isEditing}}
      <div class="row justify-content-center align-items-center">
        <div class="col-2">
          <label>Choice Title:</label>
        </div>
        <div class="col-10">
          <h3> {{input type="text" class="input-text" value=choice.title}} </h3>
        </div>
      </div>
      <div class="row justify-content-center align-items-center">
        <div class="col-2">
          <label>Choice Description:</label>
        </div>
        <div class="col-10">
          <p>
            {{textarea type="text" class="input-text py-4" value=choice.description}}
          </p>
        </div>
      </div>
    {{else}}
      <h3 class="red">{{choice.title}}</h3>
      <p>
        {{choice.description}}
      </p>
    {{/if}}
  </div>
  <div class="red col-4 choice-actions">
    {{#if isEditing}}
    <span {{action 'saveChoice'}}>
        <i class="far fa-save"></i>
        Save
      </span>
    {{else}}
      <span {{action 'toggleEditing'}}>
        <i class="far fa-edit"></i>
        Edit
      </span>
    {{/if}}

    {{#if isCorrect}}
      <span {{action 'markAsIncorrect'}}>
        <i class="far fa-times-circle"></i>
        Mark as Incorrect
      </span>
    {{else}}
      <span {{action 'markAsCorrect'}}>
        <i class="far fa-check-circle"></i>
        Mark as Correct
      </span>
    {{/if}}

    <span {{action 'deleteChoice'}}>
      <i class="far fa-trash-alt"></i>
      Delete
    </span>
  </div>

</div>

{{yield}}